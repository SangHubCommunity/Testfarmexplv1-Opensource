autoFarmBtn.MouseButton1Click:Connect(function()
	getgenv().AutoFarm = not getgenv().AutoFarm
	autoFarmBtn.Text = getgenv().AutoFarm and "Auto Farm: ON ‚úÖ" or "Auto Farm: OFF ‚ùå"
end)

-- Ph·∫ßn 74: Update Tabs Visibility
function SetTab(tab)
	for name, frame in pairs(TabFrames) do
		frame.Visible = (name == tab)
	end
end

-- Ph·∫ßn 75: Tab Switch Buttons
for tabName, _ in pairs(TabFrames) do
	local tabBtn = createButton(tabName, btnY, function()
		SetTab(tabName)
	end)
	btnY += 45
end

-- Ph·∫ßn 76: Add ESP for Island
function ESP_Islands()
	for name, cframe in pairs(IslandPositions) do
		local part = Instance.new("Part", workspace)
		part.Anchored = true
		part.CanCollide = false
		part.Size = Vector3.new(1,1,1)
		part.Position = cframe.Position
		part.Transparency = 1

		local esp = Instance.new("BillboardGui", part)
		esp.Size = UDim2.new(0, 100, 0, 40)
		esp.Adornee = part
		esp.AlwaysOnTop = true

		local txt = Instance.new("TextLabel", esp)
		txt.Size = UDim2.new(1, 0, 1, 0)
		txt.Text = "üèùÔ∏è " .. name
		txt.TextColor3 = Color3.fromRGB(0, 255, 255)
		txt.BackgroundTransparency = 1
		txt.Font = Enum.Font.GothamBold
		txt.TextScaled = true
	end
end

